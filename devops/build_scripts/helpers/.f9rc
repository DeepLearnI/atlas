#!/bin/bash

pwd=`pwd`
unset PYTHONPATH
unset FOUNDATIONS_HOME

conda deactivate \
    && conda activate foundations-36

kubectl config use-context arn:aws:eks:us-east-1:451430605210:cluster/devops \
    && cd ~/dev/foundations/ \
    && . ./activate_dev_env.sh \
    && . devops/fetch_slack_credentials.sh \
    && . devops/load_nexus_credentials.sh \
    && . devops/set_environment_for_docker_scheduler.sh \
    && kubectl config use-context kubernetes-admin@kubernetes

cd ~/dev/foundations
export FOUNDATIONS_SCHEDULER_HOST=$(ifconfig | grep 192.168.128 | awk '{print $2}' | awk -F: '{print $2}')

cd $pwd
