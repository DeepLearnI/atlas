FROM python:3.6-alpine

MAINTAINER Eric Kin Ho Lee

RUN apk --update add --no-cache g++ make

COPY ./foundations_alpine_requirements.txt /tmp/foundations_alpine_requirements.txt
COPY ./run.sh /prejob/run.sh

RUN chmod +x /prejob/run.sh

RUN pip install --requirement /tmp/foundations_alpine_requirements.txt
RUN rm /tmp/foundations_alpine_requirements.txt

ENTRYPOINT ["/prejob/run.sh"]
